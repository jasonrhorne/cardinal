# =============================================================================
# LOCAL DEVELOPMENT ENVIRONMENT
# Copy this file to .env.local for local development
# =============================================================================

# Core Application
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development
NEXT_PUBLIC_APP_VERSION=0.1.0
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Development Features
NEXT_PUBLIC_ENABLE_DEBUG_MODE=true
NEXT_PUBLIC_ENABLE_BETA_FEATURES=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Logging
DEBUG=cardinal:*
LOG_LEVEL=debug

# =============================================================================
# ADD YOUR LOCAL API KEYS BELOW
# =============================================================================

# AI/LLM Keys (add when needed)
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...
# GOOGLE_AI_API_KEY=...

# Google Maps (add when implementing F013)
# GOOGLE_MAPS_API_KEY=...
# GOOGLE_PLACES_API_KEY=...

# Database (add when implementing F011)
# DATABASE_URL=postgresql://...

# Auth (add when implementing F012)  
# AUTH0_SECRET=...
# AUTH0_CLIENT_ID=...
# AUTH0_CLIENT_SECRET=...
# AUTH0_ISSUER_BASE_URL=...

# =============================================================================
# SECURITY NOTES
# =============================================================================
# 1. Never commit this file to git
# 2. Keep API keys secure and don't share them
# 3. Use different keys for development vs production
# 4. Rotate keys regularly