{
  "name": "cardinal",
  "version": "0.1.0",
  "private": true,
  "description": "AI-powered travel itinerary generator",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:staged": "npm run format && git add .",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false --passWithNoTests",
    "test:accessibility": "jest --testPathPatterns=accessibility",
    "test:a11y": "npm run test:accessibility",
    "code-quality": "npm run typecheck && npm run lint && npm run format:check && npm run test:ci && npm run test:accessibility",
    "pre-commit": "npm run format && npm run lint:fix && npm run typecheck",
    "security-audit": "npm audit --audit-level high",
    "validate": "npm run code-quality && npm run security-audit && npm run build",
    "deployment-ready": "npm run validate && npm run env:validate",
    "setup-env": "node scripts/setup-env.js",
    "setup:hooks": "node scripts/setup-pre-commit-hooks.js install",
    "env:validate": "npx tsx -e \"import { getClientEnv } from './lib/config/env'; getClientEnv(); console.log('âœ… Environment configuration is valid')\"",
    "env:validate:ci": "node scripts/validate-env-ci.js",
    "env:check": "npx tsx -e \"import { isDevelopment, isProduction } from './lib/config/env'; console.log('Environment:', isDevelopment ? 'development' : isProduction ? 'production' : 'staging')\"",
    "db:deploy": "node database/deploy.js",
    "db:deploy:dev": "node database/deploy.js development",
    "db:deploy:staging": "node database/deploy.js staging",
    "db:deploy:prod": "node database/deploy.js production --confirm",
    "db:test": "node database/test-connection.js",
    "db:setup": "npm run db:deploy && npm run db:test"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.60.0",
    "@googlemaps/js-api-loader": "^1.16.10",
    "@langchain/anthropic": "^0.3.26",
    "@langchain/community": "^0.3.53",
    "@langchain/core": "^0.3.72",
    "@langchain/openai": "^0.6.9",
    "@netlify/functions": "^4.2.2",
    "@supabase/supabase-js": "^2.56.0",
    "@types/google.maps": "^3.58.1",
    "@types/node": "^20.16.5",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@types/uuid": "^10.0.0",
    "dotenv": "^17.2.1",
    "langchain": "^0.3.31",
    "next": "^14.2.32",
    "openai": "^5.15.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.6.2",
    "uuid": "^11.1.0",
    "web-vitals": "^5.1.0",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@axe-core/react": "^4.10.2",
    "@netlify/plugin-nextjs": "^5.7.2",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.11",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.0.5",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^30.0.5",
    "postcss": "^8.4.45",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.10",
    "tsx": "^4.20.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
